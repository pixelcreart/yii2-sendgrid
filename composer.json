{
    "name": "pixelcreart/yii2-sendgrid",
    "description": "PHP 8.1+ Sendgrid integration for the Yii framework",
    "keywords": ["yii2", "sendgrid", "mail", "email", "mailer"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Manuel Avelar",
            "email": "me@mavelar.com"
        }
    ],
    "require": {
        "yiisoft/yii2": "~2.0",
        "sendgrid/sendgrid": "~7",
        "php" : ">=8.1.0"
    },
    "require-dev" : {
        "php" : ">=8.1.0",
        "codeception/codeception": "~5.0"
    },
    "autoload": {
        "psr-4": { "pixelcreart\\sendgrid\\": "src" }
    },
    "extra": {
        "branch-alias": {
            "dev-devel": "1.0.x-dev"
        }
    }
}
